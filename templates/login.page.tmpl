{{template "base" .}}

{{define "content"}}
<style>
  body {
    background-color: #121212;
    font-family: "Inter", sans-serif;
  }

  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem 1rem;
    min-height: 90vh;
  }

  .login-card {
    background: #121212;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    max-width: 400px;
    width: 100%;
  }

  .login-title {
    font-size: 1.8rem;
    font-weight: 700;
    text-align: center;
    color: #ccc;
    margin-bottom: 1.5rem;
  }

  .login-input {
    font-size: 1rem;
    height: 2.5rem;
  }

  .login-button {
    background-color: #1f64ff;
    color: white;
    border: none;
    height: 2.5rem;
    font-weight: 600;
    width: 100%;
    margin-top: 1rem;
    border-radius: 6px;
  }

  .login-button:hover {
    background-color: #164bdb;
  }

  .login-footer {
    text-align: center;
    font-size: 0.9rem;
    margin-top: 1rem;
  }

  .login-footer a {
    color: #1f64ff;
    text-decoration: none;
  }

  .login-footer a:hover {
    text-decoration: underline;
  }

  label.label {
    color: #888;
  }
</style>

<div class="login-container">
  <div class="login-card">
    <h1 class="login-title">會員登入</h1>

    <form method="POST" action="/login">
      <!-- CSRF Token -->
      <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

      <!-- Email -->
      <div class="field">
        <label class="label">Email</label>
        <div class="control">
          <input class="input login-input" type="email" name="email" placeholder="you@example.com" required>
        </div>
      </div>

      <!-- Password -->
      <div class="field">
        <label class="label">Password</label>
        <div class="control">
          <input class="input login-input" type="password" name="password" placeholder="********" required>
        </div>
      </div>

      <!-- Error Message -->
      {{if .Error}}
      <p class="help is-danger">{{.Error}}</p>
      {{end}}

      <!-- Submit -->
      <div class="field">
        <button type="submit" class="button login-button">登入</button>
      </div>
    </form>

    <div class="login-footer">
      <a href="/register">還沒有帳號？立即註冊</a>
    </div>
  </div>
</div>
{{end}}
