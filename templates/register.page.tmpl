{{template "base" .}}

{{define "content"}}
<style>
  body {
    background-color: #121212;
    font-family: "Inter", sans-serif;
  }

  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem 1rem;
    min-height: 90vh;
  }

  .login-card {
    background: #121212;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    max-width: 400px;
    width: 100%;
  }

  .login-title {
    font-size: 1.8rem;
    font-weight: 700;
    text-align: center;
    color: #ccc;
    margin-bottom: 1.5rem;
  }

  .login-input {
    font-size: 1rem;
    height: 2.5rem;
  }

  .login-button {
    background-color: #1f64ff;
    color: white;
    border: none;
    height: 2.5rem;
    font-weight: 600;
    width: 100%;
    margin-top: 1rem;
    border-radius: 6px;
  }

  .login-button:hover {
    background-color: #164bdb;
  }

  .login-footer {
    text-align: center;
    font-size: 0.9rem;
    margin-top: 1rem;
  }

  .login-footer a {
    color: #1f64ff;
    text-decoration: none;
  }

  .login-footer a:hover {
    text-decoration: underline;
  }

  label.label {
    color: #888;
  }

  .help.is-danger {
    color: #ff4d4f;
    margin-top: 0.5rem;
    font-size: 0.9rem;
  }
</style>

<div class="login-container">
  <div class="login-card">
    <h1 class="login-title">建立帳號</h1>

    <form id="registerForm" method="POST" action="/register" onsubmit="return validatePasswords()">
      <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

      <!-- Name -->
      <div class="field">
        <label class="label">名稱</label>
        <div class="control">
          <input class="input login-input" type="text" name="first_name" placeholder="您的名字" required>
        </div>
      </div>

      <!-- Email -->
      <div class="field">
        <label class="label">信箱</label>
        <div class="control">
          <input class="input login-input" type="email" name="email" placeholder="you@example.com" required>
        </div>
      </div>

      <!-- Password -->
      <div class="field">
        <label class="label">密碼</label>
        <div class="control">
          <input id="password" class="input login-input" type="password" name="password" placeholder="********" required>
        </div>
      </div>

      <!-- Retype Password -->
      <div class="field">
        <label class="label">再次輸入密碼</label>
        <div class="control">
          <input id="retypePassword" name="confirm_password" class="input login-input" type="password" placeholder="********" required>
        </div>
        <p id="passwordError" class="help is-danger" style="display: none;">兩次輸入的密碼不一致</p>
      </div>

      {{if .Error}}
      <p class="help is-danger">{{.Error}}</p>
      {{end}}

      <!-- Submit -->
      <div class="field">
        <button type="submit" class="button login-button">註冊</button>
      </div>
    </form>

    <div class="login-footer">
      <a href="/login">已經有帳號？前往登入</a>
    </div>
  </div>
</div>

<script>
  function validatePasswords() {
    const pw1 = document.getElementById('password').value;
    const pw2 = document.getElementById('retypePassword').value;
    const error = document.getElementById('passwordError');

    if (pw1 !== pw2) {
      error.style.display = 'block';
      return false;
    }

    error.style.display = 'none';
    return true;
  }
</script>
{{end}}
